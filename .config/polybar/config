[bar/top]
font-0 = "Source Code Pro:size=11"
font-1 = "Source Han Sans KR Medium:size=11"
font-2 = "Source Han Sans JP Medium:size=11"

background = #303030

modules-left = title

tray-position = right
tray-detached = false
tray-maxsize  = 16

[bar/bottom]
font-0 = "Source Code Pro:size=11"
font-1 = "Source Han Sans KR Medium:size=11"
font-2 = "Source Han Sans JP Medium:size=11"

bottom = true

background = #303030

modules-right = wire-network wireless-network pulseaudio cpu memory date


[module/wire-network]
type = internal/network
interface = enp4s0
interval = 3.0

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = WRN %downspeed:9%
label-connected-foreground = #ee00fa00

label-disconnected = NO-SIGNAL
label-disconnected-foreground = #ff0000

[module/wireless-network]
type = internal/network
interface = wlp5s0
interval = 3.0

format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-padding = 2
format-disconnected-padding = 2

label-connected = WRL %downspeed:8%
label-connected-foreground = #ee00fa00

label-disconnected = NO-SIGNAL
label-disconnected-foreground = #ff0000

format-padding = 2

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 2

; Available tokens:
;   %percentage% (default)
;   %decibels% (unreleased)
label-muted = ðŸ”‡ muted
label-muted-foreground = #666

; Only applies if <ramp-volume> is used
ramp-volume-0 = ðŸ”ˆ
ramp-volume-1 = ðŸ”‰
ramp-volume-2 = ðŸ”Š

[module/cpu]
type = internal/cpu
interval = 1.0
label = CPU %percentage:3%%
format-padding = 0 

[module/memory]
type = internal/memory
interval = 2
format = <label>
format-padding = 2
label = RAM %gb_used:5%/%gb_total:5%

[module/date]
type = internal/date
interval = 1.0
date = %Y-%m-%d %H:%M:%S%

[module/title]
type = internal/xwindow
format = <label>
format-foreground = #fff
format-padding = 0

label = %title%
label-maxlen = 50

label-empty = No_Title
label-empty-foreground = #ff0000
